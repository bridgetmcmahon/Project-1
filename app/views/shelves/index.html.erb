<div class="header">
  <div class="container">
    <h1>My Books</h1>
  </div>
</div>

<div class="container">
  <% @current_user.shelves.each do |shelf| %>
    <div class="shelf">
      <h3 class="shelf-name"><%= link_to shelf.name, shelf_path(shelf) %></h3>
        <% if shelf.books.empty? %>
          <p>You haven't added any books to this shelf yet</p>
        <% else %>
          <% shelf.books.each do |book| %>
            <%= link_to image_tag(book.cover, :class => 'img-thumbnail'), book_path(book) %>
          <% end %>
        <% end %>
      <hr>
    </div>
  <% end %>
</div>
