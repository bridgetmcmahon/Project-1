<div class="header">
  <div class="container">
    <h1>Search Books</h1>
  </div>
</div>

<div class="container">
  <%= form_tag books_search_results_path, :method => 'get' %>
    <div class="form-group">
      <%= label_tag "Search by title" %>
      <%= text_field_tag :title, nil, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag "Search by Author" %>
      <%= text_field_tag :author, nil, :class => 'form-control' %>
    </div>
  <%= submit_tag "Search", :class => 'btn btn-info' %>
</div>
