<h1><%= @book.title %></h1>

<%= image_tag @book.cover, :class => 'feature' %>
<ul>
  <li>Author(s):
  <% @book.authors.each do |author| %>
    <%= link_to author.name, author_path(author.id) %>
  <% end %>
  </li>
  <% unless @book.synopsis.nil? %>
  <li>Synopsis: <%= @book.synopsis %></li>
  <% end %>
</ul>

<!-- need to add link to add to shelf -->
<p>Add to Shelf:</p>
<%= form_tag book_to_shelf_path(@book) do %>
  <%= select_tag :shelf_id,
    options_for_select(
    [["Select a shelf", -1 ]] +
    @current_user.shelves.pluck(:name, :id)
    )%>
  <%= submit_tag "Add Book" %>
<% end %>
