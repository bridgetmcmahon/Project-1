<div class="container">
  <h1>Sign In</h1>

  <% if flash[:error_message].present? %>
    <p><%= flash[:error_message] %></p>
  <% end %>

  <%= form_tag(login_path, :class => 'form-group' ) do %>
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class => 'form-control' %>

    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control' %>

    <%= submit_tag "Sign In", :class => 'btn btn-dark' %>
  <% end %>
</div>
