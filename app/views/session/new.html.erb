<div class="header">
  <div class="container">
    <h1>Sign In</h1>
  </div>
</div>

<div class="container">

  <% if flash[:error_message].present? %>
    <p><%= flash[:error_message] %></p>
  <% end %>

  <%= form_tag(login_path, :class => 'form-group') do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, :class => 'form-control' %>
    </div>
    
    <%= submit_tag "Sign In", :class => 'btn btn-info sign-in' %>
  <% end %>
</div>
