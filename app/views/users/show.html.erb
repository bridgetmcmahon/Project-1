<div class="container">
  <div class="user-profile">
    <h1><%= @user.name %></h1>

    <%= cl_image_tag(@user.image, :class => "user-image") %>

    <div>
      <h3>Stats</h3>
      <p>Books read: <%= @books_read.to_s %></p>
      <p>Total books in bookshelf: <%= @total_books %></p>
      <p>Books rated: <%= @rated %></p>
    </div>

    <div>
      <% if @current_user.id == @user.id %>
        <%= link_to "Edit Profile", edit_user_path(@user.id), :class => "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
